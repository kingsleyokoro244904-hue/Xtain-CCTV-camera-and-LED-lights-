    .contact-row{display:flex;align-items:center;gap:12px;flex-wrap:wrap;justify-content:space-between}
    .phone{color:var(--white);font-weight:700}
    .links{display:flex;gap:10px;align-items:center}

    /* Popup Container (centered overlay) */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.4s ease, visibility 0s linear 0.4s;
}

.popup.active {
  visibility: visible;
  opacity: 1;
  transition-delay: 0s;
}

/* Popup Box */
.popup-box {
  position: relative;
  background: #fff;
  padding: 40px 30px;
  border-radius: 12px;
  text-align: center;
  width: 90%;
  max-width: 400px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s ease;
}

@keyframes slideUp {
  from { transform: translateY(40px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* Title & Paragraph */
.popup-box h3 {
  color: #0f90ff;
  margin-bottom: 10px;
  font-size: 1.5rem;
}

.popup-box p {
  color: #333;
  font-size: 1rem;
  margin-bottom: 20px;
  line-height: 1.5;
}

/* Buttons */
.popup-box .gift-btn {
  background-color: #0f90ff;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  transition: 0.3s;
}

.popup-box .gift-btn:hover {
  background-color: #0b7bd6;
}

/* Close Button (‚ùå) */
.close-btn {
  position: absolute;
  top: 10px;
  right: 12px;
  width: 32px;
  height: 32px;
  border: none;
  border-radius: 50%;
  background: rgba(15, 144, 255, 0.1);
  color: #0b7bd6;
  font-size: 22px;
  font-weight: bold;
  line-height: 1;
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
}

.close-btn:hover {
  background: rgba(15, 144, 255, 0.2);
  color: #0f90ff;
}
  

.close-btn:hover {
  background: rgba(15, 144, 255, 0.2);
  color: #ffff00;
}

    /* ---------- Responsive ---------- */
